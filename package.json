{
	"name": "payload-dependencies-graph",
	"version": "1.0.0",
	"homepage:": "https://payloadcms.com",
	"repository": "git@github.com:GeorgeHulpoi/payload-dependencies-graph.git",
	"description": "This plugin creates a dependency graph between collections and globals. The graph updates automatically, because the plugin observes the changes made on any collection or globals.",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"keywords": [
		"payload",
		"cms",
		"plugin",
		"typescript",
		"dependencies",
		"graph"
	],
	"scripts": {
		"build": "tsc",
		"test": "cd dev && npm run test",
		"lint": "eslint src",
		"lint:fix": "eslint --fix --ext .ts,.tsx src",
		"clean": "rimraf dist && rimraf dev/package-lock.json",
		"prepublishOnly": "npm run clean && npm run build && cd dev && npm run test"
	},
	"author": {
		"name": "George-Valentin Hulpoi",
		"url": "https://gvhdev.com"
	},
	"license": "MIT",
	"peerDependencies": {
		"payload": "^1.0.0"
	},
	"devDependencies": {
		"@payloadcms/eslint-config": "^0.0.1",
