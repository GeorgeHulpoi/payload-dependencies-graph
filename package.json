		"@types/jest": "^29.5.5",
		"@typescript-eslint/eslint-plugin": "5.51.0",
		"@typescript-eslint/parser": "5.51.0",
		"dotenv": "^8.2.0",
		"eslint": "^8.19.0",
		"eslint-config-airbnb-base": "^15.0.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-import": "2.25.4",
		"eslint-plugin-prettier": "^4.0.0",
		"jest": "^29.7.0",
		"payload": "^1.8.2",
		"prettier": "^2.7.1",
		"react": "^18.0.0",
		"ts-jest": "^29.1.1",
		"typescript": "^4.8.4"
	}
}
